{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "ts",
    "actor",
    "action",
    "context",
    "result"
  ],
  "properties": {
    "ts": {
      "type": "string",
      "format": "date-time"
    },
    "actor": {
      "type": "string",
      "enum": [
        "planner",
        "builder",
        "docgen",
        "human",
        "ci"
      ]
    },
    "action": {
      "type": "string"
    },
    "context": {
      "type": "object"
    },
    "result": {
      "type": "string",
      "enum": [
        "proposed",
        "accepted",
        "rejected",
        "rolled_back",
        "no_op"
      ]
    }
  },
  "additionalProperties": true
}