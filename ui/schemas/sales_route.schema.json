{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Sales Route Plan",
  "type": "object",
  "required": [
    "date",
    "stops"
  ],
  "properties": {
    "date": {
      "type": "string",
      "format": "date"
    },
    "stops": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "time",
          "title",
          "location"
        ],
        "properties": {
          "time": {
            "type": "string",
            "pattern": "^\\d{2}:\\d{2}$"
          },
          "title": {
            "type": "string"
          },
          "location": {
            "type": "object",
            "required": [
              "address"
            ],
            "properties": {
              "address": {
                "type": "string"
              },
              "lat": {
                "type": "number"
              },
              "lng": {
                "type": "number"
              }
            }
          },
          "customer_id": {
            "type": "string"
          },
          "crm_link": {
            "type": "string"
          },
          "notes": {
            "type": "string"
          }
        }
      }
    }
  }
}