{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": false,
    "noEmit": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["apps/frontend/src/*"],
      "@backend/*": ["apps/backend/src/*"],
      "@backend-tests/*": ["apps/backend/tests/*"],
      "@backend-meta/*": ["apps/backend/meta/*"]
    }
  },
  "include": [
    "types/**/*.d.ts",
    "apps/**/src/**/*.d.ts",
    "apps/backend/tests/__mocks__/**/*.ts",
    "observability/metrics/**/*.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/build",
    ".turbo",
    "**/*.test.tsx",
    "**/*.spec.tsx"
  ]
}
