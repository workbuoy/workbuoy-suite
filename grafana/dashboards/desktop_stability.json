{
  "title": "Desktop Stability",
  "timezone": "browser",
  "templating": {
    "list": [
      {
        "name": "env",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "PROM"
        },
        "query": "label_values(desktop_crash_total, env)",
        "refresh": 1
      },
      {
        "name": "channel",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "PROM"
        },
        "query": "label_values(desktop_crash_total, channel)",
        "refresh": 1
      }
    ]
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "Crash rate per version",
      "datasource": {
        "type": "prometheus",
        "uid": "PROM"
      },
      "targets": [
        {
          "expr": "sum by (version) (rate(desktop_crash_total{env=~\"$env\",channel=~\"$channel\"}[5m]))",
          "legendFormat": "{{version}}"
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 12,
        "h": 8
      }
    },
    {
      "type": "timeseries",
      "title": "Sync latency p95 (seconds)",
      "datasource": {
        "type": "prometheus",
        "uid": "PROM"
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le, env, channel) (rate(sync_latency_seconds_bucket{env=~\"$env\",channel=~\"$channel\"}[5m])))",
          "legendFormat": "p95 {{env}}/{{channel}}"
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 8,
        "w": 12,
        "h": 8
      }
    },
    {
      "type": "stat",
      "title": "Crashes (last 1h)",
      "datasource": {
        "type": "prometheus",
        "uid": "PROM"
      },
      "targets": [
        {
          "expr": "sum(increase(desktop_crash_total{env=~\"$env\",channel=~\"$channel\"}[1h]))"
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 16,
        "w": 6,
        "h": 4
      }
    },
    {
      "type": "stat",
      "title": "Active versions (crash>0 last 24h)",
      "datasource": {
        "type": "prometheus",
        "uid": "PROM"
      },
      "targets": [
        {
          "expr": "count(sum by (version) (increase(desktop_crash_total[24h])) > 0)"
        }
      ],
      "gridPos": {
        "x": 6,
        "y": 16,
        "w": 6,
        "h": 4
      }
    }
  ],
  "schemaVersion": 38,
  "version": 1
}
