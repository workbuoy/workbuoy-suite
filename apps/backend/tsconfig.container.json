{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "noEmit": false,
    "strict": false
  },
  "include": [
    "src/index.ts",
    "src/server.ts",
    "src/app.secure.ts",
    "src/security/**/*.ts",
    "src/middleware/**/*.ts",
    "src/observability/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    // Exclude optional/experimental areas not required for the runtime image
    "src/crm/",
    "src/connectors/",
    "src/meta-evolution/",
    "src/metrics/",
    "src/docs/",
    "src/swagger.ts",
    "src/identity/",
    "src/scim/",
    // generic excludes
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
