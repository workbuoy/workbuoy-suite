{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "noEmit": false,
    "strict": false,
    "baseUrl": ".",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "paths": {
      "@workbuoy/backend-rbac": ["../../packages/backend-rbac/src/index.ts"],
      "@workbuoy/backend-telemetry": ["../../packages/backend-telemetry/src/index.ts"]
    },
    "rootDirs": [
      ".",
      "../../packages/backend-rbac/src",
      "../../packages/backend-telemetry/src"
    ]
  },
  "include": [
    "src/index.ts",
    "src/server.ts",
    "src/app.secure.ts",
    "src/security/**/*.ts",
    "src/middleware/**/*.ts",
    "src/observability/**/*.ts",
    "src/**/*.d.ts",
    "src/types/**/*.d.ts"
  ],
  "exclude": [
    // Exclude optional/experimental areas not required for the runtime image
    "src/crm/",
    "src/connectors/",
    "src/meta-evolution/",
    "src/metrics/",
    "src/docs/",
    "src/swagger.ts",
    "src/identity/",
    "src/scim/",
    "src/rbac/",
    // generic excludes
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
