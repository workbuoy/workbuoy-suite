{
  "extends": "./tsconfig.meta.json",
  "compilerOptions": {
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "allowArbitraryExtensions": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/types/**/*.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "coverage"
  ]
}
