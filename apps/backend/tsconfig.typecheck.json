{
  "extends": "./tsconfig.meta.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "resolveJsonModule": true,
    "allowArbitraryExtensions": true,
    "types": ["node", "jest"]
  },
  "include": [
    "src/**/*.ts",
    "src/types/**/*.d.ts"
  ],
  "exclude": [
    "dist",
    "coverage",
    "node_modules"
  ]
}
