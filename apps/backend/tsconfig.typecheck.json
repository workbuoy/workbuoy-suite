{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": true,
    "types": ["node", "express"],
    "typeRoots": ["../../types", "../../node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@workbuoy/backend-telemetry": ["../../packages/backend-telemetry/src/index"],
      "@workbuoy/backend-rbac": ["../../packages/backend-rbac/src/index"],
      "@workbuoy/backend-metrics": ["../../packages/backend-metrics/src/index"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "typings/**/*.d.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "tests",
    "tests-smoke",
    "dist"
  ]
}
