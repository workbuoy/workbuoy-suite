{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "noEmit": true,
    "types": ["jest", "node"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "rootDirs": ["./", "../../tests"],
    "paths": {
      "@backend/*": ["src/*"],
      "@backend-tests/*": ["tests/*"],
      "@backend-meta/*": ["meta/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "meta/**/*.ts",
    "meta/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "../../crm/**",
    "../../enterprise/**",
    "../../desktop/**",
    "../../connectors/**",
    "../../sdk/**",
    "../../docs/**",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
