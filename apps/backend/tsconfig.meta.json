{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "noEmit": true,
    "types": [
      "node",
      "jest"
    ],
    "resolveJsonModule": true,
    "allowArbitraryExtensions": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@backend/*": [
        "src/*"
      ],
      "@backend-tests/*": [
        "tests/*"
      ],
      "@backend-meta/*": [
        "meta/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/types/**/*.d.ts"
  ],
  "exclude": [
    "dist",
    "coverage",
    "node_modules"
  ]
}
