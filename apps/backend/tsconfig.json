{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "ES2022",
    "strict": true,
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "types/**/*.d.ts"],
  "exclude": [
    "tests/**",
    "dist/**",
    "node_modules/**",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.e2e.ts"
  ]
}
