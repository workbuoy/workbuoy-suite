{
  "uid": "wb-obsv-crm",
  "title": "WorkBuoy \u2013 CRM Observability",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "15s",
  "panels": [
    {
      "type": "row",
      "title": "Webhooks"
    },
    {
      "type": "graph",
      "title": "Webhook success per provider (rate)",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 1
      },
      "targets": [
        {
          "expr": "sum by (provider)(rate(crm_webhook_success_total[5m]))"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Webhook error per provider (rate)",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 1
      },
      "targets": [
        {
          "expr": "sum by (provider)(rate(crm_webhook_error_total[5m]))"
        }
      ]
    },
    {
      "type": "row",
      "title": "Pipeline Throughput"
    },
    {
      "type": "table",
      "title": "Transitions per stage (1h)",
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 9
      },
      "targets": [
        {
          "expr": "sum by (pipeline_id,from_stage,to_stage)(increase(crm_pipeline_transitions_total[1h]))"
        }
      ]
    },
    {
      "type": "row",
      "title": "API Latency"
    },
    {
      "type": "graph",
      "title": "Latency p50/p90/p99",
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 17
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.5, sum by (le) (rate(crm_api_latency_ms_bucket[5m])))"
        },
        {
          "expr": "histogram_quantile(0.9, sum by (le) (rate(crm_api_latency_ms_bucket[5m])))"
        },
        {
          "expr": "histogram_quantile(0.99, sum by (le) (rate(crm_api_latency_ms_bucket[5m])))"
        }
      ]
    }
  ]
}
