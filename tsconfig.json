{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["frontend/src/*"]
    },
    "types": ["node", "jest"],
    "typeRoots": ["./types", "./node_modules/@types", "./backend/node_modules/@types"]
  },
  "include": [
    "src/**/*.ts",
    "backend/src/**/*.ts",
    "backend/tests/**/*.ts",
    "frontend/src/**/*.ts",
    "frontend/src/**/*.tsx",
    "frontend/src/**/*.d.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/dist"
  ]
}
