{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "apps/frontend/src/*"
      ]
    },
    "types": [
      "node",
      "jest",
      "prisma__client"
    ],
    "typeRoots": [
      "./types",
      "./node_modules/@types",
      "./apps/backend/node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "apps/backend/src/**/*.ts",
    "apps/backend/routes/**/*.ts",
    "apps/backend/tests/**/*.ts",
    "apps/frontend/src/**/*.ts",
    "apps/frontend/src/**/*.tsx",
    "apps/frontend/src/**/*.d.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/dist"
  ],
  "references": [
    {
      "path": "./apps/frontend/tsconfig.json"
    }
  ]
}
